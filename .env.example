# OpenAI API設定
OPENAI_API_KEY="XXX"

# LLMアダプター設定 (openai, ollama, dummy)
LLM_ADAPTER=openai

# PostgreSQL設定
POSTGRES_HOST=db
POSTGRES_DB=semicon_topics
POSTGRES_USER=semicon_topics
POSTGRES_PASSWORD=semiconpass

# パイプライン設定
PIPELINE_ENV=development
LOG_LEVEL=INFO

# RSS収集設定
RSS_FETCH_TIMEOUT=10
RSS_MAX_ARTICLES_PER_FEED=50

# 要約設定
SUMMARY_MAX_LENGTH=500
CATEGORY_CONFIDENCE_THRESHOLD=0.7

# データベース設定
DATABASE_URL="postgresql://semicon_topics:semiconpass@db:5432/semicon_topics"

# Node.js環境設定
NODE_ENV=production
